<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <meta
      name="description"
      content=""
    />
    <meta name="color-scheme" content="light dark">

    <title><%= typeof title !== 'undefined' ? `${title} - Blog` : 'Blog' %></title>

    <link rel='icon' type='image/svg+xml' href='/images/favicon.svg'>

    <link rel="stylesheet" href="/dist/bootstrap.css">
    <link rel="stylesheet" href="/dist/shared.css">
    <link rel="stylesheet" href="/dist/auth/styles.css">
    <link rel="stylesheet" href="/dist/webComponents.css">

    <%# <script src="/dist/bootstrap.js"></script> %>
  </head>
  <body>
    <main class="d-flex align-items-center justify-content-center py-3 auth-form">
      <square-card class="d-flex align-items-center">
        <div class="d-none d-lg-flex align-items-center justify-content-center left-side">
          <picture>
            <source srcSet="/images/icon-monotone-white.svg" media='(prefers-color-scheme: dark)'>
            <img src="/images/icon-monotone-black.svg" class="w-100">
          </picture>
        </div>
        <div class="p-4 right-side">
          <%- body %>
        </div>
      </square-card>
    </main>

    <script src="/dist/webComponents.js" defer></script>
    <script src="/dist/shared.js" defer></script>
  </body>
</html>
