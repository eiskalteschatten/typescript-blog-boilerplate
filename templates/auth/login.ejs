<h5 class="text-center mb-5">Welcome to the Blog!</h5>

<% if (error) { %>
  <div class="alert alert-danger" role="alert"><%=error%></div>
<% } %>

<form action="/login" method="post" class="d-flex flex-column align-items-center">
  <div class="form-group">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" name="_username" required="required" class="input auth-input">
  </div>

  <div class="form-group">
    <label for="password" class="form-label">Password</label>
    <input type="password" id="password" name="_password" required="required" class="input auth-input">
  </div>

  <div class="text-center mt-4">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button type="submit" class="button primary large">Log In</button>
  </div>
</form>

<div class="or my-4 opacity-50">
  <span class="or-text">or</span>
</div>

<footer class="auth-footer opacity-75 text-center">
  Don't have an account yet? <a href="/auth/register">Create an Account</a>

  <div class="mt-4">
      <a href="/" class="secondary-link">Back to the Homepage</a>
  </div>
</footer>
